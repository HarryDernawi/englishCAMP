    <script type="module">
        // Get references to the DOM elements for Slogan Generator
        const sloganInput = document.getElementById('sloganInput');
        const generateSloganBtn = document.getElementById('generateSloganBtn');
        const sloganOutput = document.getElementById('sloganOutput');

        // Get references to the DOM elements for Registration Form
        const registrationForm = document.getElementById('registrationForm');
        const studentNameInput = document.getElementById('studentName');
        const studentAgeInput = document.getElementById('studentAge');
        const englishLevelSelect = document.getElementById('englishLevel');
        const localSectionRadio = document.getElementById('localSection');
        const internationalSectionRadio = document.getElementById('internationalSection');
        const parentPhoneInput = document.getElementById('parentPhone');

        // Get references for the custom message modal
        const modal = document.getElementById('myModal');
        const modalMessage = document.getElementById('modalMessage');
        const closeButton = document.getElementsByClassName('close-button')[0]; // For message modal

        // Get references for Admin Login
        const adminLoginBtn = document.getElementById('adminLoginBtn');
        const adminLoginModal = document.getElementById('adminLoginModal');
        const closeLoginModalBtn = document.getElementById('closeLoginModalBtn');
        const loginForm = document.getElementById('loginForm');
        const usernameInput = document.getElementById('username');
        const passwordInput = document.getElementById('password');
        const adminDashboard = document.getElementById('adminDashboard');

        // Function to display custom modal message
        function showModal(message) {
            modalMessage.textContent = message;
            modal.style.display = 'flex';
        }

        // Close the message modal when the close button is clicked
        closeButton.onclick = function() {
            modal.style.display = 'none';
        }

        // Close any modal when clicking outside of the modal content
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
            if (event.target == adminLoginModal) {
                adminLoginModal.style.display = 'none';
            }
        }

        // --- Admin Login Logic ---
        adminLoginBtn.addEventListener('click', () => {
            adminLoginModal.style.display = 'flex';
        });

        closeLoginModalBtn.onclick = function() {
            adminLoginModal.style.display = 'none';
        }

        loginForm.addEventListener('submit', (event) => {
            event.preventDefault();
            const username = usernameInput.value;
            const password = passwordInput.value;

            // Simple hardcoded credentials for demonstration (NOT SECURE FOR PRODUCTION)
            if (username === 'admin' && password === 'password123') {
                adminLoginModal.style.display = 'none';
                adminDashboard.style.display = 'flex'; // Show dashboard
                showModal('تم تسجيل الدخول بنجاح! مرحباً بالمدير.');
                // Load current settings into dashboard inputs
                loadAdminSettingsIntoInputs();
            } else {
                showModal('اسم المستخدم أو كلمة المرور غير صحيحة.');
            }
        });

        // Function to load current settings into dashboard inputs
        async function loadAdminSettingsIntoInputs() {
            const docSnap = await getDoc(adminSettingsDocRef);
            if (docSnap.exists()) {
                const settings = docSnap.data();
                document.getElementById('logoUrlInput').value = settings.logoUrl || '';
                document.getElementById('bodyBgColorInput').value = settings.colors.bodyBg || '#E6F0F5';
                document.getElementById('headerGradientStartInput').value = settings.colors.headerGradientStart || '#3F72AF';
                document.getElementById('headerGradientEndInput').value = settings.colors.headerGradientEnd || '#112D4E';
                document.getElementById('featureIconColorInput').value = settings.colors.featureIconColor || '#3B82F6';
                document.getElementById('formSubmitButtonStartInput').value = settings.colors.formSubmitButtonStart || '#3B82F6';
                document.getElementById('formSubmitButtonEndInput').value = settings.colors.formSubmitButtonEnd || '#2563EB';

                // Populate text inputs
                document.getElementById('mainTitleInput').value = settings.texts.mainTitle || '';
                document.getElementById('campSloganInput').value = settings.texts.campSlogan || '';
                document.getElementById('campNameInput').value = settings.texts.campName || '';
                document.getElementById('registrationStatusInput').value = settings.texts.registrationStatus || '';
                document.getElementById('programIntroInput').value = settings.texts.programIntro || '';
                document.getElementById('programHeadingInput').value = settings.texts.programHeading || '';
                document.getElementById('educationalHoursHeadingInput').value = settings.texts.educationalHoursHeading || '';
                document.getElementById('recreationalHoursHeadingInput').value = settings.texts.recreationalHoursHeading || '';
                document.getElementById('methodologyHeadingInput').value = settings.texts.methodologyHeading || '';
                document.getElementById('methodologyDescriptionInput').value = settings.texts.methodologyDescriptionText || '';
                document.getElementById('durationTextInput').value = settings.texts.durationTextContent || '';
                document.getElementById('datesTextInput').value = settings.texts.datesTextContent || '';
                document.getElementById('locationTextInput').value = settings.texts.locationTextContent || '';
                document.getElementById('contactPhoneDisplayInput').value = settings.texts.contactPhoneDisplay || '';
                document.getElementById('ourGoalHeadingTextInput').value = settings.texts.ourGoalHeadingText || '';
                document.getElementById('ourGoalDescriptionTextInput').value = settings.texts.ourGoalDescriptionText || '';
                document.getElementById('limitedSeatsTextInput').value = settings.texts.limitedSeatsTextContent || '';
                document.getElementById('bottomContactInfoTextInput').value = settings.texts.bottomContactInfoText || '';
                document.getElementById('bottomPhoneTextInput').value = settings.texts.bottomPhoneTextContent || '';
                document.getElementById('hashtagsTextInput').value = settings.texts.hashtagsTextContent || '';
            }
        }


        // Function to generate slogan using Gemini API
        generateSloganBtn.addEventListener('click', async () => {
            const keywords = sloganInput.value.trim();
            if (!keywords) {
                sloganOutput.innerHTML = '<span style="color: #dc2626;">الرجاء إدخال بعض الكلمات المفتاحية.</span>';
                return;
            }

            // Show loading indicator
            sloganOutput.innerHTML = '<span class="loading-spinner"></span> جاري توليد الشعار...';
            generateSloganBtn.disabled = true; // Disable button during generation

            try {
                // Construct the prompt for the LLM
                const prompt = `Generate a catchy and inspiring slogan for an English language camp. The slogan should be short, memorable, and focused on fun, learning, and confidence. Incorporate these keywords: ${keywords}. Provide only the slogan, no extra text.`;

                let chatHistory = [];
                chatHistory.push({ role: "user", parts: [{ text: prompt }] });

                const payload = { contents: chatHistory };
                const apiKey = ""; // Canvas will automatically provide the API key

                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    const text = result.candidates[0].content.parts[0].text;
                    sloganOutput.textContent = text.trim(); // Display the generated slogan
                } else {
                    sloganOutput.innerHTML = '<span style="color: #dc2626;">عذرًا، لم أتمكن من توليد شعار. حاول مرة أخرى.</span>';
                    console.error('Unexpected API response structure:', result);
                }
            } catch (error) {
                sloganOutput.innerHTML = '<span style="color: #dc2626;">حدث خطأ أثناء الاتصال بالخدمة. الرجاء المحاولة لاحقًا.</span>';
                console.error('Error generating slogan:', error);
            } finally {
                generateSloganBtn.disabled = false; // Re-enable button
            }
        });

        // Handle form submission
        registrationForm.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent default form submission

            const studentData = {
                name: studentNameInput.value,
                age: studentAgeInput.value,
                englishLevel: englishLevelSelect.value,
                section: localSectionRadio.checked ? localSectionRadio.value : (internationalSectionRadio.checked ? internationalSectionRadio.value : ''),
                parentPhone: parentPhoneInput.value
            };

            // Basic validation check for phone number pattern
            const phonePattern = /^[0-9]{10}$/;
            if (!phonePattern.test(studentData.parentPhone)) {
                showModal('الرجاء إدخال رقم هاتف ولي أمر صحيح مكون من 10 أرقام.');
                return;
            }

            // Here you would typically send this data to a backend server or a database
            // For now, we'll just display a confirmation message using the custom modal.
            console.log('بيانات التسجيل:', studentData);
            showModal('تم استلام طلب تسجيل الطالب/ة ' + studentData.name + ' بنجاح!');

            // Optionally, clear the form after submission
            registrationForm.reset();
        });

        // Slider functionality
        const sliderSlides = document.getElementById('sliderSlides');
        const prevSlideBtn = document.getElementById('prevSlideBtn');
        const nextSlideBtn = document.getElementById('nextSlideBtn');
        const sliderDots = document.getElementById('sliderDots');

        const phrases = [
            "الإنجليزية: مفتاح طفلك نحو عالم أوسع!",
            "اجعل تعلم الإنجليزية مغامرة ممتعة لطفلك!",
            "بناء الثقة في اللغة الإنجليزية، خطوة بخطوة.",
            "صيف مليء بالمرح والتعلم... بالإنجليزية!",
            "مستقبل طفلك يبدأ بإتقان الإنجليزية."
        ];

        let currentSlideIndex = 0;
        let slideInterval;

        function renderSlides() {
            sliderSlides.innerHTML = '';
            sliderDots.innerHTML = '';
            phrases.forEach((phrase, index) => {
                const slideDiv = document.createElement('div');
                slideDiv.classList.add('slide');
                slideDiv.textContent = phrase;
                sliderSlides.appendChild(slideDiv);

                const dotSpan = document.createElement('span');
                dotSpan.classList.add('dot');
                dotSpan.addEventListener('click', () => showSlide(index));
                sliderDots.appendChild(dotSpan);
            });
            showSlide(currentSlideIndex);
        }

        function showSlide(index) {
            if (index >= phrases.length) {
                currentSlideIndex = 0;
            } else if (index < 0) {
                currentSlideIndex = phrases.length - 1;
            } else {
                currentSlideIndex = index;
            }

            sliderSlides.style.transform = `translateX(-${currentSlideIndex * 100}%)`;

            // Update dots
            const dots = document.querySelectorAll('.slider-dots .dot');
            dots.forEach((dot, i) => {
                if (i === currentSlideIndex) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            });
        }

        function nextSlide() {
            showSlide(currentSlideIndex + 1);
        }

        function prevSlide() {
            showSlide(currentSlideIndex - 1);
        }

        prevSlideBtn.addEventListener('click', prevSlide);
        nextSlideBtn.addEventListener('click', nextSlide);

        function startSlider() {
            stopSlider(); // Clear any existing interval
            slideInterval = setInterval(nextSlide, 5000); // Change slide every 5 seconds
        }

        function stopSlider() {
            clearInterval(slideInterval);
        }

        // Initialize slider on window load
        window.onload = function() {
            renderSlides();
            startSlider();
        };

        // Pause slider on hover
        sliderSlides.addEventListener('mouseenter', stopSlider);
        sliderSlides.addEventListener('mouseleave', startSlider);
    </script>
</body>
</html>
